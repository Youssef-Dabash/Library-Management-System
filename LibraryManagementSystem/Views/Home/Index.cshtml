@model List<Book>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h3 class="display-4">Welcome to the One Reader Library</h3>
   <hr />
</div>


<div class="d-flex flex-wrap">
    @foreach (var book in Model)
    {
        <div class="card card-hover shadow-sm m-2" style="width: 16rem; min-height: 320px;">
            <div class="card-img-top d-flex align-items-center justify-content-center mt-2" style="height: 220px; background-color: #f8f9fa;">
            <img src="@Url.Content(book.Image)"
                 alt="@book.Title"
                 style="max-height: 100%; max-width: 100%; object-fit: contain;" />
            </div>

            <div class="card-body d-flex flex-column">
                <h5 class="card-title text-center">@book.Title</h5>
                <h6 class="card-subtitle text-center mb-2 text-danger ">@book.Author</h6>
                <p class="card-text">
                    <strong>Available:</strong>
                    @if (book.AvailableCopies == 0)
                    {
                        <span class="status wrong">×</span>
                    }
                    else
                    {
                        <span class="status correct">✓</span>
                    }
                </p>
                <a asp-controller="Book" asp-action="DetailsBook" asp-route-id="@book.BookId" class="btn btn-primary mt-auto">Details</a>
            </div>
        </div>
    }
</div>

<style>
    .card-hover {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .card-hover:hover {
        transform: scale(1.05); 
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3); 
        z-index: 10;
    }

    .status {
        display: inline-block;
        width: 24px;
        height: 24px;
        line-height: 24px;
        text-align: center;
        font-weight: bold;
        border-radius: 4px; 
        color: white;
        font-size: 16px;
    }

    .status.correct {
        background-color: #28a745;
    }

    .status.wrong {
        background-color: #dc3545; 
    }
</style>