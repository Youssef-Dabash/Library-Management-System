@model List<Book>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h3 class="display-4">📚 Welcome to the One Reader Library</h3>
    <p class="lead text-muted">Manage your books, categories, and memberships with ease.</p>
   <hr />
</div>

<div class="row justify-content-center mt-4">
    <div class="row g-4 mb-4">
        <!-- Users Card -->
        <div class="col-md-3">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <h5 class="card-title text-info">👥 Users</h5>
                    <p class="card-text">Add, update and manage all library users.</p>
                    <a asp-controller="User" asp-action="Index" class="btn btn-outline-info w-100">View Users</a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title text-primary">📖 Books</h5>
                    <p class="card-text">Browse, add, and manage library books.</p>
                    <a asp-controller="Book" asp-action="Index" class="btn btn-outline-primary w-100">View Books</a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title text-success">📂 Categories</h5>
                    <p class="card-text">Organize books into categories for easy access.</p>
                    <a asp-controller="Category" asp-action="Index" class="btn btn-outline-success w-100">View Categories</a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title text-secondary">💳 Memberships</h5>
                    <p class="card-text">Manage library memberships and members.</p>
                    <a asp-controller="MembershipTier" asp-action="Index" class="btn btn-outline-secondary w-100">View Memberships</a>
                </div>
            </div>
        </div>
    </div>
    <hr />
</div>


<div class="d-flex flex-wrap">
    @foreach (var book in Model)
    {
        <div class="card card-hover shadow-sm m-2" style="width: 16rem; min-height: 320px;">
            <div class="card-img-top d-flex align-items-center justify-content-center mt-2" style="height: 220px; background-color: #f8f9fa;">
            <img src="@Url.Content(book.Image)"
                 alt="@book.Title"
                 style="max-height: 100%; max-width: 100%; object-fit: contain;" />
            </div>

            <div class="card-body d-flex flex-column">
                <h5 class="card-title text-center">@book.Title</h5>
                <h6 class="card-subtitle text-center mb-2 text-danger ">@book.Author</h6>
                <p class="card-text">
                    <strong>Available:</strong>
                    @if (book.AvailableCopies == 0)
                    {
                        <span class="status wrong">×</span>
                    }
                    else
                    {
                        <span class="status correct">✓</span>
                    }
                </p>
                <a asp-controller="Book" asp-action="DetailsBook" asp-route-id="@book.BookId" class="btn btn-primary mt-auto">Details</a>
            </div>
        </div>
    }
</div>

<style>
    .card-hover {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .card-hover:hover {
        transform: scale(1.05); 
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3); 
        z-index: 10;
    }

    .status {
        display: inline-block;
        width: 24px;
        height: 24px;
        line-height: 24px;
        text-align: center;
        font-weight: bold;
        border-radius: 4px; 
        color: white;
        font-size: 16px;
    }

    .status.correct {
        background-color: #28a745;
    }

    .status.wrong {
        background-color: #dc3545; 
    }
</style>