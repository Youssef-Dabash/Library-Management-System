<div class="modal fade" id="returnModal" tabindex="-1" aria-labelledby="returnModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title" id="returnModalLabel">Confirm Return</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <p id="returnMessage">Are you sure you want to return this book?</p>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="returnForm" method="post">
                    <button type="submit" class="btn btn-success">Confirm Return</button>
                </form>
            </div>

        </div>
    </div>
</div>

<script>
    function openReturnModal(borrowId, bookTitle) {
        var form = document.getElementById('returnForm');
        form.setAttribute("action", "/Borrowing/ReturnBorrow/" + borrowId);

        if (bookTitle) {
            document.getElementById('returnMessage').innerText =
                "Are you sure you want to return the book: " + bookTitle + "?";
        } else {
            document.getElementById('returnMessage').innerText =
                "Are you sure you want to return this book?";
        }

        var modal = new bootstrap.Modal(document.getElementById('returnModal'));
        modal.show();
    }
</script>
