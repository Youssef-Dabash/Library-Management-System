@model User

<div class="container my-4 w-50">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">
                <i class="bi bi-person-check me-2"></i> Borrowing - User Verification
            </h4>
        </div>

        <div class="card-body p-4">
            <form asp-controller="Borrowing" asp-action="CheckUser" method="post">
                <div class="form-group mb-3">
                    <label asp-for="UserName" class="form-label fw-bold">Username</label>
                    <input asp-for="UserName" class="form-control shadow-sm" placeholder="Enter username" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Password" class="form-label fw-bold">Password</label>
                    <input asp-for="Password" type="password" class="form-control shadow-sm" placeholder="Enter password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-success px-4">
                        <i class="bi bi-shield-lock me-1"></i> Verify
                    </button>
                    <a asp-action="Index" asp-controller="Borrowing" class="btn btn-danger px-4">
                        <i class="bi bi-arrow-left-circle me-1"></i> Cancel
                    </a>
                </div>
            </form>

            @if (!ViewData.ModelState.IsValid)
            {
                var firstError = ViewData.ModelState.Values
                .SelectMany(v => v.Errors)
                .FirstOrDefault();

                if (firstError != null)
                {
                    <div class="alert alert-danger mt-3">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        @firstError.ErrorMessage
                    </div>
                }

                @if (ViewBag.ShowRegisterButton == true)
                {
                    <div class="mt-3 text-center">
                        <a asp-controller="User" asp-action="AddUser" class="btn btn-outline-primary">
                            <i class="bi bi-person-plus me-1"></i> Add New User
                        </a>
                    </div>
                }
            }
        </div>
    </div>
</div>
