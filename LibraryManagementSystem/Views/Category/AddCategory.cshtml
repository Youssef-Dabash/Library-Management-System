@model Category
@{
    ViewData["Title"] = "AddCategory";
}

<h1>Add New Category</h1>
<form method="post" asp-controller="Category" asp-action="SaveCategory">
    <div class="mb-3 row">
        <label asp-for="CategoryName" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            <input asp-for="CategoryName" class="form-control">
        </div>
    </div>
    <div class="mb-3 row">
        <label asp-for="Description" class="col-sm-2 col-form-label">Description</label>
        <div class="col-sm-10">
            <textarea asp-for="Description" class="form-control" rows="4" style="resize: vertical;"></textarea>
        </div>
    </div>

    <input type="submit" value="Save" class="btn btn-primary" />
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
