@model List<Category>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-success">
            🏷️ Categories
        </h2>
        <div class="class=" d-flex gap-2"">
            <a asp-controller="Category" asp-action="AddCategory" class="btn btn-success px-4">
                <i class="bi bi-plus-circle me-1"></i> Add New Category
            </a>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary px-4">
                <i class="bi bi-arrow-left-circle me-1"></i> Back
            </a>
        </div>
    </div>
    <table class="table table-striped table-bordered text-center align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th style="width: 120px;">Count Books</th>
                    <th>Details</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>@category.CategoryName</td>
                        <td>
                            <div style="max-height: 80px; overflow-y: auto; white-space: normal;">
                                @category.Description
                            </div>
                        </td> 
                        <td>@category.Books?.Count</td>
                        <td>
                            <a asp-controller="Category" asp-action="DetailsCategory" asp-route-id="@category.CategoryId" class="btn btn-info w-100 text-center">View</a>
                        </td>
                        <td>
                            <a class="btn btn-danger w-100 text-center text-light"
                                onclick="openDeleteModal('Category', @category.CategoryId, '@category.CategoryName')">
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
</div>

@await Html.PartialAsync("_DeleteModal")
