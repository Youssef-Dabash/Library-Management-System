@model Category

@{
    ViewData["Title"] = "DetailsCategory";
}

<div class="d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-lg rounded-4 mb-4" style="max-width: 700px; width:100%;">
        <div class="card-header bg-info text-white rounded-top-4">
            <h4 class="mb-0"><i class="bi bi-journal-bookmark-fill me-2"></i>Category Details</h4>
        </div>
        <div class="card-body p-4">
            <h2 class="mb-3 text-primary">@Model.CategoryName</h2>
            <p class="text-muted">@Model.Description</p>

            <h5 class="mt-4">
                <i class="bi bi-book-half me-2"></i>
                Count Books in this Category:
                <span class="badge bg-secondary">@Model.Books?.Count</span>
            </h5>

            @if (Model.Books != null && Model.Books.Any())
            {
                <ul class="list-group list-group-flush mt-3">
                    @foreach (var book in Model.Books)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <strong>@book.Title</strong><br />
                                <small class="text-muted">@book.Author</small>
                            </div>
                            <span class="badge bg-primary rounded-pill">Book</span>
                        </li>
                    }
                </ul>
            }
            else
            {
                <p class="text-danger mt-3"><i class="bi bi-exclamation-circle me-1"></i>No books in this category.</p>
            }
        </div>
        <a class="btn btn-secondary mt-2 px-4" asp-action="Index" asp-controller="Category">Back</a>
    </div>
</div>

