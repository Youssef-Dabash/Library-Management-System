<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LibraryManagementSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LibraryManagementSystem.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/StyleSheetNav.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/aos.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <style>
        body {
            /* font-family: 'Poppins', sans-serif; */
            background-color: #f8f9fa;
        }

        .navbar-brand {
            font-size: 1.5rem;
            letter-spacing: 0.5px;
        }

        .navbar-brand i {
            font-size: 1.6rem;
            margin-right: 6px;
            color: #0dcaf0; 
        }

        .nav-link.active {
            font-weight: 600;
            color: #0dcaf0 !important;
        }

        footer {
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-book-half"></i> Library Management System
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item ">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door me-1"></i> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="User" asp-action="Index">
                                <i class="bi bi-people-fill me-1"></i> Users
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Book" asp-action="Index">
                                <i class="bi bi-book me-1"></i> Books
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Category" asp-action="Index">
                                <i class="bi bi-tags me-1"></i> Categories
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Borrowing" asp-action="Index">
                                <i class="bi bi-box-arrow-right me-1"></i> Borrowings
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="MembershipTier" asp-action="Index">
                                <i class="bi bi-people me-1"></i> Memberships
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="AboutUs">
                                <i class="bi bi-info-circle me-1"></i> About Us
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy">
                                <i class="bi bi-shield-lock me-1"></i> Privacy
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer border-top bg-dark text-light">
        <div class="container">
            <div class="text-center small text-light">
                © 2025 - Library Management System | All Rights Reserved
                <a asp-controller="Home" asp-action="Index" class="btn btn-success">
                    <i class="bi bi-house-door me-1"></i>Home
                </a>
                <a asp-controller="Home" asp-action="AboutUs" class="btn btn-success">About Us</a>
                <a asp-area="" asp-controller="Home" asp-action="Privacy" class="btn btn-success">
                    Privacy Policy
                </a>
            </div>
        </div>
    </footer>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/aos.js"></script>
    <script>
        AOS.init({ duration: 1000, once: true });
    </script>

    @await Html.PartialAsync("_DeleteModal")
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
