<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LibraryManagementSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LibraryManagementSystem.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/StyleSheetNav.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/aos.css">
    <link rel="stylesheet" href="/css/colorNav.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <partial  name="_PartialViewNavbar"></partial>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer border-top bg-dark text-light">
        <div class="container">
            <div class="text-center small text-light">
                © 2025 - Library Management System | All Rights Reserved
                <a asp-controller="Home" asp-action="Index" class="btn btn-success">
                    <i class="bi bi-house-door me-1"></i>Home
                </a>
                <a asp-controller="Home" asp-action="AboutUs" class="btn btn-success">
                    <i class="bi bi-info-circle me-1"></i>About Us</a>
                <a asp-area="" asp-controller="Home" asp-action="Privacy" class="btn btn-success">
                    <i class="bi bi-shield-lock me-1"></i>Privacy Policy
                </a>
            </div>
        </div>
    </footer>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/aos.js"></script>
    <script>
        AOS.init({ duration: 1000, once: true });
    </script>

    @await Html.PartialAsync("_DeleteModal")
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
