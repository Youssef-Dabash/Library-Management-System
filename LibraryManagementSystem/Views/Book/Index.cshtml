@model List<Book>


@{
    ViewData["Title"] = "Index";
}

@* ➕ *@
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-success">
            📚 All Books in Library
        </h2>
        <div class="class=" d-flex gap-2"">
            <a asp-controller="Book" asp-action="AddBook" class="btn btn-success px-4">
                <i class="bi bi-plus-circle me-1"></i> Add New Book
            </a>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary px-4">
                <i class="bi bi-arrow-circle me-1"></i> Back
            </a>
        </div>
    </div> 

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th class="text-center">Title</th>
                <th class="text-center">Author</th>
                <th class="text-center">Copies</th>
                <th class="text-center">Add Copy</th>
                <th class="text-center">Details</th>
                <th class="text-center">Edit</th>
                <th class="text-center">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.Title</td>
                    <td>@book.Author</td>
                    <td>@book.AvailableCopies</td>
                    <td>
                        <form asp-action="IncreaseCopies" asp-route-id="@book.BookId" method="post" style="display:inline">
                            <button type="submit" class="btn btn-success w-100 text-center">+ Copy</button>
                        </form>
                    </td>
                    <td>
                        <a class="btn btn-info w-100 text-center" asp-action="DetailsBook" asp-route-id="@book.BookId">Details</a>
                    </td>
                    <td>
                        <a class="btn btn-primary w-100 text-center" asp-action="EditBook" asp-route-id="@book.BookId">Edit</a>
                    </td>
                    <td>
                        <a class="btn btn-danger w-100 text-center"
                           onclick="openDeleteModal('Book', @book.BookId, '@book.Title')">
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@await Html.PartialAsync("_DeleteModal")


