@model User
@{
    ViewData["Title"] = "EditUser";
    SelectList optionMemberTier = new SelectList(ViewBag.MembershipTier, "TierId", "TierName");
}

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-success text-white text-center">
            <h3>Edit User</h3>
        </div>
        <div class="card-body p-4">
            <form method="post" asp-controller="User" asp-action="EditUser" class="row g-3">
                <input hidden asp-for="UserId" />

                <div class="form-floating col-md-6">
                    <input asp-for="FullName" class="form-control" placeholder="FullName">
                    <label asp-for="FullName" class="form-label">Full Name</label>
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="form-floating col-md-6">
                    <input asp-for="UserName" class="form-control" placeholder="UserName">
                    <label asp-for="UserName" class="form-label">User Name</label>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="form-floating col-md-6">
                    <input asp-for="Password" type="password" class="form-control" placeholder="Password">
                    <label asp-for="Password" class="form-label">Password</label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-floating col-md-6">
                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="ConfirmPassword">
                    <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="form-floating col-md-6">
                    <input asp-for="Address" class="form-control" placeholder="Address">
                    <label asp-for="Address" class="form-label">Address</label>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-floating col-md-6">
                    <input asp-for="Phone" class="form-control" placeholder="Phone">
                    <label asp-for="Phone" class="form-label">Phone</label>
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <div class="form-floating col-md-6">
                    <input asp-for="Email" class="form-control" placeholder="Email">
                    <label asp-for="Email" class="form-label">Email</label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-floating col-md-6">
                    <input asp-for="BirthOfDate" type="date" class="form-control" placeholder="Birth Of Date">
                    <label asp-for="BirthOfDate" class="form-label">Birth Of Date</label>
                    <span asp-validation-for="BirthOfDate" class="text-danger"></span>
                </div>

                <div class="input-group mb-3">
                    <select class="form-select"
                            asp-items="optionMemberTier"
                            asp-for="TierId">
                        <option value="0">Choose Membership Type</option>
                    </select>
                    <label asp-for="TierId" class="input-group-text">Options</label>
                    <span asp-validation-for="TierId" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <input type="submit" value="🔵 Save" class="btn btn-success px-4" />
                    <a asp-controller="User" asp-action="Index" class="btn btn-secondary px-4">🟢 Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
